{
  "private": true,
  "version": "0.1",
  "main": "index.ts",
  "name": "minilinker",
  "license": "UNLICENSED",
  "repository": "github.com/ViBC27/MiniLinker",
  "author": "Vitor Barcelos <vbc@ic.ufal.br>",
  "scripts": {
    "commit": "cz",
    "watch:dev": "nodemon",
    "watch:debug": "nodemon --inspect",
    "lint": "eslint . --ext .ts --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "dev": "yarn run server NODE_ENV=development",
    "prod": " yarn run server NODE_ENV=production",
    "watch:test": "jest --detectOpenHandles --forceExit --config jest.json",
    "server": "node -r ts-node/register -r tsconfig-paths/register www.ts",
    "tsdev": "ts-node-dev --transpile-only --ignore-watch node_modules src/server.ts",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "nodemonConfig": {
    "exec": "yarn run dev",
    "ext": "ts, js, json",
    "watch": []
  },
  "dependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.7",
    "@types/sequelize": "^4.28.9",
    "express": "^4.17.1",
    "sqlite3": "^5.0.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.29",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/morgan": "^1.9.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
